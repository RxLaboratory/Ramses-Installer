<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Ramses</Name>
    <Title>Ramses</Title>
    <Version>0.8.x</Version>
    <Publisher>RxLaboratory</Publisher>
    <ProductUrl>https://rxlaboratory.org/tools/ramses/</ProductUrl>
    <TargetDir>@ApplicationsDir@/Ramses</TargetDir>
    <RunProgram>@TargetDir@/ramses.app</RunProgram>
    <InstallerApplicationIcon>ramses_install</InstallerApplicationIcon>
    <InstallerWindowIcon>ramses_install.png</InstallerWindowIcon>
    <WizardShowPageList>true</WizardShowPageList>
    <WizardStyle>Modern</WizardStyle>
    <!--<StyleSheet>style.qss</StyleSheet>-->
    <WizardDefaultHeight>800</WizardDefaultHeight>
    <WizardDefaultWidth>960</WizardDefaultWidth>
    <ControlScript>controlscript.js</ControlScript>
    <RemoveTargetDir>false</RemoveTargetDir>
    <Banner>ramses_banner.png</Banner>
    <MaintenanceToolName>Ramses Maintenance Tool</MaintenanceToolName>
    <ProductImages>
        <ProductImage>
            <Image>product_rxot.png</Image>
            <Url>http://rxlaboratory.org</Url>
        </ProductImage>
    </ProductImages>
    <RemoteRepositories>
        <Repository>
            <Url>https://repo.rxlab.io/ramses/mac</Url>
            <Enabled>1</Enabled>
            <DisplayName>RxLaboratory - Ramses</DisplayName>
        </Repository>
        <Repository>
            <Url>https://repo.rxlab.io/ifw/mac</Url>
            <Enabled>1</Enabled>
            <DisplayName>RxLaboratory - Maintenance Tool</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>
